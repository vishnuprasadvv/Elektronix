<body>
    <div class="page-wrapper">
        <%- include('partials/header.ejs')%>
        <main class="main bg-light">
        	
            <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3 ">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        
                        <li class="breadcrumb-item"><a href="/admin/orders">Orders</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
            	<div class="dashboard">
                
	                <div class="container">
	                	<div class="row g-0">
                            <div class="col-lg-2 col-md-4 border bg-white">
	                		
	                			<ul class="nav nav-dashboard flex-column mb-3 mb-md-4 mt-md-2" role="tablist">
								    <li class="nav-item p-3">
								        <a class="nav-link" id="tab-dashboard-link"  href="/admin/dashboard" role="tab" aria-controls="tab-dashboard" aria-selected="false">Dashboard</a>
								    </li>
                                    <li class="nav-item p-3">
								        <a class="nav-link " id="tab-address-link" href="/admin/sales" role="tab" aria-controls="tab-address" aria-selected="false">Sales</a>
								    </li>
								    <li class="nav-item p-3 ">
								        <a class="nav-link" id="tab-orders-link"  href="/admin/products" role="tab" aria-controls="tab-orders" aria-selected="false">Products</a>
								    </li>
								    <li class="nav-item p-3 ">
								        <a class="nav-link " id="tab-orders-link"  href="/admin/category" role="tab" aria-controls="tab-orders" aria-selected="false">Product category</a>
								    </li>
                                    <li class="nav-item p-3 ">
								        <a class="nav-link " id="tab-orders-link"  href="/admin/brands" role="tab" aria-controls="tab-orders" aria-selected="false">Product Brands</a>
								    </li>
								    <li class="nav-item p-3">
								        <a class="nav-link active" id="tab-downloads-link" href="/admin/orders" role="tab" aria-controls="tab-downloads" aria-selected="true">Orders</a>
								    </li>
								    <li class="nav-item p-3">
								        <a class="nav-link" id="tab-address-link" href="/admin/users" role="tab" aria-controls="tab-address" aria-selected="false">Users</a>
								    </li>
                                    <li class="nav-item p-3">
								        <a class="nav-link" id="tab-address-link" href="/admin/coupon" role="tab" aria-controls="tab-address" aria-selected="false">Coupons</a>
								    </li>
								    <li class="nav-item p-3">
								        <a class="nav-link " id="tab-address-link" href="/admin/offers" role="tab" aria-controls="tab-address" aria-selected="false">Offers</a>
								    </li>
								   
								    <li class="nav-item pt-3 text-center">
                                        <form action="/admin/logout" method="post">
                                            <button type="submit" class="btn btn-outline-primary-2">
                                                <span>LOG OUT</span>
                                                <i class="icon-long-arrow-right"></i>
                                            </button>
                                        </form>
								    </li>
								</ul>
	                		
                        </div>
                      <!-- CONTENT -->
	                		<div class="col-lg-10">
	                			<div class="w-100 h-100 bg-white">
                                    <div class="fluid-container p-3">
                                        
                                            <div class="row">
                                            
                                                <div class="col-lg-12">
                                                    <h2 class="checkout-title">Edit Order details</h2><!-- End .checkout-title -->
                                                        <div class="row">
                                                            <div class="card card-dashboard" >
                                                                <div class="m-2 p-2"><span class="bg-light p-2 border rounded-3">Order ID : <%=order.order_id%></span></div>

                                                                <div class="row align-items-center p-3">
                                                                    <div class="col col-12">
                                                                        <div class="row ">
                                                                        <div class="col-6 border p-5">
                                                                            <div class="border border-3 border-warning p-2 col-6">
                                                                            <span><b>Status :</b></span>
                                                                            <span <% if(order.status == 'cancelled'){%>class="text-danger"<%}else if(order.status =='placed'){%>class="text-warning"<%}else if(order.status =='delivered'){%>class="text-success"<%}%>><b><%= order.status%></b></span>
                                                                            </div>
                                                                    
                                                                        <div class="pt-1"><span>ordered on : 
                                                                            <%
                                                                            const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
                                                                            const date =months[order.date_of_order.getMonth()]+" "+order.date_of_order.getDate()+", "+order.date_of_order.getFullYear() %>
                                                                            <%= date %>
                                                                        </span></div>
                                                                        <% if(order.date_of_cancel){%>
                                                                        <div><span class="text-danger">cancelled on : 
                                                                            <%
                                                                            const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
                                                                            const date =months[order.date_of_cancel.getMonth()]+" "+order.date_of_cancel.getDate()+", "+order.date_of_cancel.getFullYear() %>
                                                                            <%= date %>
                                                                        </span></div>
                                                                        <%}%>
                                                                        <% if(order.date_of_shipped){%>
                                                                        <div><span>Shipped on : 
                                                                            <%
                                                                            const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
                                                                            const date =months[order.date_of_shipped.getMonth()]+" "+order.date_of_shipped.getDate()+", "+order.date_of_shipped.getFullYear() %>
                                                                            <%= date %>
                                                                        </span></div>
                                                                        <%}%>
                                                                        <% if(order.date_of_delivered){%>
                                                                        <div><span class="text-success">Delivered on : 
                                                                            <%
                                                                            const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
                                                                            const date =months[order.date_of_delivered.getMonth()]+" "+order.date_of_delivered.getDate()+", "+order.date_of_delivered.getFullYear() %>
                                                                            <%= date %>
                                                                        </span></div>
                                                                        
                                                                        <%}%>
                                                                        </div>
                                                                        
                                                                        <div class="col-6 align-items-center">
                                                                            <div class="row border p-5">
                                                                        <form action="/admin/orders/<%=order._id %>/edit?_method=PATCH" method="post" >
                                                                        <div class="col">
                                                                            <h6>Change status</h6>
                                                                            <div class="form-check">
                                                                                <input class="form-check-input" type="radio" name="order_status" id="flexRadioDefault1" value="placed" 
                                                                                <% if(order.status=='placed'){%>
                                                                                    checked
                                                                                    <%}else{%> 
                                                                                        <%}%>>
                                                                                <label class="form-check-label" for="flexRadioDefault1">
                                                                                  Placed
                                                                                </label>
                                                                              </div>
                                                                              <div class="form-check">
                                                                                <input class="form-check-input" type="radio" name="order_status" id="flexRadioDefault2" value="shipped"
                                                                                <% if(order.status=='shipped'){%>
                                                                                    checked
                                                                                    <%}else{%> 
                                                                                        <%}%>>
                                                                                <label class="form-check-label" for="flexRadioDefault2">
                                                                                  Shipped
                                                                                </label>
                                                                              </div>
                                                                              <div class="form-check">
                                                                                <input class="form-check-input" type="radio" name="order_status" id="flexRadioDefault3" value="processed"
                                                                                <% if(order.status=='processed'){%>
                                                                                    checked
                                                                                    <%}else{%> 
                                                                                        <%}%>>
                                                                                <label class="form-check-label" for="flexRadioDefault3">
                                                                                  Processed
                                                                                </label>
                                                                              </div>
                                                                              <div class="form-check">
                                                                                <input class="form-check-input" type="radio" name="order_status" id="flexRadioDefault4" value="delivered"
                                                                                <% if(order.status=='delivered'){%>
                                                                                    checked
                                                                                    <%}else{%> 
                                                                                        <%}%>>
                                                                                <label class="form-check-label" for="flexRadioDefault4">
                                                                                  Delivered
                                                                                </label>
                                                                              </div>
                                                                              <div class="form-check">
                                                                                <input class="form-check-input" type="radio" name="order_status" id="flexRadioDefault5" value="cancelled"
                                                                                <% if(order.status=='cancelled'){%>
                                                                                    checked
                                                                                    <%}else{%> 
                                                                                        <%}%>>
                                                                                <label class="form-check-label" for="flexRadioDefault5">
                                                                                  Cancelled
                                                                                </label>
                                                                              </div>
                                                                             </div>
                                                                             <div class="col align-items-center d-flex justify-content-center">
                                                                                <div class="btn-wrap"> 
                                                                                    <button type="submit" class="btn btn-primary btn-rounded me-4 mt-2" <% if(order.status == 'delivered'){%> disabled <%}%>>SAVE</button>
                                                                                </div>
                                                                                <div class="btn-wrap">
                                                                                    <a href="/admin/orders" class="btn btn-outline-primary btn-rounded ms-4 mt-2">Cancel</a>
                                                                                </div>
                                                                            </div>
                                                                        </form>
                                                                        </div>
                                                                        
                                                                     </div>
                                                                     

                                                                        <hr>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                
                                                                
                                                                <div class="row d-flex flex-row align-items-center p-3 " >
                                                                    <% for(let item of order.items){%>
                                                                    <div class="col-6 ">
                                                                        <div class="row align-items-center">
                                                                            
                                                                            <div class="col col-3">
                                                                                <a href="/view?id=<%=item.product_var_id.product._id%>">
                                                                            <img src="/productImages/<%= item.product_var_id.product.image[0] %>" alt="Product image">
                                                                                </a>
                                                                            </div>
                                                                            <div class="col-6">
                                                                                <div class="row">
                                                                                <a href="/view?id=<%=item.product_var_id.product._id%>"><span><%=item.product_var_id.product.name%></span></a>
                                                                                </div>
                                                                                <div class="row"><small>Color : <%=item.product_var_id.color%> </small></div>
                                                                                <div class="row"><small>Qty :<%=item.quantity%> </small></div>
                                                                            </div>
                                                                            <div class="col col-3"><span><b>₹ &nbsp;<%=item.product_var_id.product.price %></b></span></div>
                                                                        </div>
                                                                    </div>
                                                                    <hr>
                                                                    <%}%>
                                                                    
                                                                </div>
                                                                <div class="card card-dashboard" >
                                                                    <div class="row d-flex flex-row align-items-top p-3" >
                                                                        
                                                                        
                                                                        <div class="col "><h6>Delivery address</h6>
                                                                            <div><span>
                                                                                <%= order.shipping_address.name%><br><br>
                                                                                <%= order.shipping_address.mobile%>, 
                                                                                <%= order.shipping_address.pincode%>, 
                                                                                <%= order.shipping_address.address%>, 
                                                                                <%= order.shipping_address.district%>, 
                                                                                <%= order.shipping_address.state%>
                    
                                                                                    
                                                                            </span></div>
                                                                        </div>
                                                                        <div class="col "><h6>Payment method</h6>
                                                                            <div><span><% if(order.payment_type =='cod'){%>
                                                                                Cash on delivery
                                                                                <%}else{%>
                                                                                    <%= order.payment_type%>
                                                                                    <%}%>
                                                                                
                                                                            </span></div>
                                                                        </div>
                                                                        
                                                                        <div class="col col-3">
                                                                        <h6>Order summary</h6>
                                                                            
                                                                            <div><span>Sub-total : 
                                                                                ₹ &nbsp;<%= order.sub_total%>
                                                                            </span></div>
                                                                            <div><span>Shipping : 
                                                                                ₹ &nbsp;<%= order.shipping_charge%>
                                                                            </span></div>
                                                                            <div><span><b>Total : 
                                                                                ₹ &nbsp;<%= order.total_amount%></b>
                                                                            </span></div>
                                                                            
                                                                            
                                                                            
                                                                        </div>
                                                                        
                                                                    </div>
                                                                </div><!-- End .card-dashboard -->

                                                              
                                                                
                                                            </div>
<!--                                                         
                                                        <div class="btn-wrap d-flex justify-content-around pt-3">
                                                            <div class="btn-wrap">
                                                                <a href="/admin/orders" class="btn btn-outline-primary btn-rounded">Cancel</a>
                                                            </div>
                                                            <div class="btn-wrap"> 
                                                                    <button type="submit" class="btn btn-primary btn-rounded">SAVE</button>
                                                            </div>
                                                            
                                                        </div> -->
                                                       
                                                    </div><!-- End .col-lg-9 -->
                                                
                                            </div><!-- End .row -->
                                       
                                    </div>
								    </div><!-- .End .tab-pane -->
								</div>
	                		</div><!-- End .col-lg-9 -->
	                	</div><!-- End .row -->
	                </div><!-- End .container -->
                </div><!-- End .dashboard -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->

       

    </div><!-- End .page-wrapper -->
