	<script>
		toastr.options = {
	  "closeButton": false,
	  "debug": false,
	  "newestOnTop": true,
	  "progressBar": false,
	  "positionClass": "toast-top-center",
	  "preventDuplicates": false,
	  "onclick": null,
	  "showDuration": "300",
	  "hideDuration": "1000",
	  "timeOut": "5000",
	  "extendedTimeOut": "1000",
	  "showEasing": "swing",
	  "hideEasing": "linear",
	  "showMethod": "fadeIn",
	  "hideMethod": "fadeOut"
	}
	   $(document).ready(()=>{
		let toast_success = '<%= success%>'
		
		let toast_error = '<%= alert%>'
		if(toast_success !=''){
			toastr.success(toast_success)
		}
		
		if(toast_error !=''){
			toastr.error(toast_error)
		}
	   })
	</script>
